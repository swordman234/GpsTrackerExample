    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tracking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_start_live_tracking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_tracking" />

    <Button
        android:id="@+id/btn_start_live_tracking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Start Live Tracking"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_end_live_tracking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_tracking" />

    <Button
        android:id="@+id/btn_end_live_tracking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="End Live Tracking"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_start_live_tracking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_start_live_tracking"
        app:layout_constraintTop_toTopOf="@id/btn_start_live_tracking" />

</androidx.constraintlayout.widget.ConstraintLayout>